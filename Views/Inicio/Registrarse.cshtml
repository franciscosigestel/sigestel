@model sigestel.Models.SutAdministradores;
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Registrarse</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/sigestel.styles.css" asp-append-version="true" />
</head>
<body>
    <div class="container mt-5 pt-5">
        <div class="row justify-content-center">
            <div class="col-12 col-xl-4 col-md-6">
                <div class="card">
                    <div class="card-header">
                       Darse de alta
                    </div>
                    <div class="card-body">
                        <form asp-controller="Inicio" asp-action="Registrarse" method="post">
                            <input class="form-control mb-3" type="text" placeholder="Nombre Completo" asp-for="NombreCompleto" required />
                            <input class="form-control mb-3" type="text" placeholder="NIF" asp-for="Usuario" required />
                            <input class="form-control mb-3" type="text" placeholder="Correo" asp-for="Email" required />
                            <input class="form-control mb-3" type="text" placeholder="Teléfono" asp-for="Telefono" required />
                            <input class="form-control mb-3" type="password" placeholder="Contraseña" asp-for="Clave" required />
                            <div class="d-grid gap-2 mb-3">
                                <button class="btn btn-primary sigestelprimario" type="submit">Darse de alta</button>
                            </div>
                            @if (ViewData["Mensaje"] != null)
                            {
                                <div class="form-group">
                                    <div class="alert alert-danger" role="alert">
                                        @ViewData["Mensaje"]

                                    </div>
                                </div>
                            }
                            ¿Ya estás dado de alta? <a href="@Url.Action("IniciarSesion","Inicio")">Iniciar sesión</a>

                        </form>

                    </div>
                </div>

            </div>
        </div>
    </div>



    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
</body>
</html>
